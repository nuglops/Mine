    <style>
        :root {
            --case-color: #2d5a27; /* Dark green plastic */
            --tile-off: #4a4a4a;   /* Grey off state */
            --tile-on: #fbbf24;    /* Bright yellow on state */
        }
        
        body {
            background-color: #1a1a1a;
            user-select: none;
            touch-action: manipulation;
        }

        .handheld-case {
            background-color: var(--case-color);
            border: 8px solid #1e3a1a;
            box-shadow: 
                inset 0 4px 10px rgba(255,255,255,0.2),
                0 20px 50px rgba(0,0,0,0.5);
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 12px;
            padding: 20px;
            background: rgba(0,0,0,0.2);
            border-radius: 12px;
        }

        .tile {
            aspect-ratio: 1/1;
            background-color: var(--tile-off);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
